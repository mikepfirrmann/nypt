<h1>Listing routes</h1>

<table>
  <tr>
    <th>Short name</th>
    <th>Long name</th>
    <th>Type</th>
    <th>Url</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @routes.each do |route| %>
  <tr>
    <td><%= route.short_name %></td>
    <td><%= route.long_name %></td>
    <td><%= route.type %></td>
    <td><%= route.url %></td>
    <td><%= route.color %></td>
    <td><%= link_to 'Show', route %></td>
    <td><%= link_to 'Edit', edit_route_path(route) %></td>
    <td><%= link_to 'Destroy', route, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>


<h1>Listing trips</h1>

<table>
  <tr>
    <th>Headsign</th>
    <th>Direction</th>
    <th>Block</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @trips.each do |trip| %>
  <tr>
    <td><%= trip.headsign %></td>
    <td><%= trip.direction_id %></td>
    <td><%= trip.block_id %></td>
    <td><%= link_to 'Show', trip %></td>
    <td><%= link_to 'Edit', edit_trip_path(trip) %></td>
    <td><%= link_to 'Destroy', trip, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

